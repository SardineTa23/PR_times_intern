<% if user == current_user %>
  <%= link_to '編集', edit_user_path(user),class: "btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
<% else %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user),id: user.id, class:"btn btn-default", method: :delete, remote: true %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user), id: user.id, class:"btn btn-primary", method: :post, remote: true%>
  <% end %>
<% end %>
