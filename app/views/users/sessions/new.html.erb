
<div class="body">
  <div class="news">
    <div class="form-heading">ログイン</div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'users-form') do |f| %>
        <div class="form-body">
          <div class="field">
            <%= f.label 'メールアドレス' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label 'パスワード' %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>


